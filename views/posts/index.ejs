<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.min.css"  media="screen,projection"/>
    <link href="/stylesheets/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>
    <nav class="blue-grey darken-4" role="navigation">
        <div class="nav-wrapper container">
          <a id="logo-container" href="#" class="brand-logo">Homeeeeeeeeeeee</a>
          <ul class="right hide-on-med-and-down">
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
          </ul>
    
          <ul id="nav-mobile" class="sidenav">
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
          </ul>
          <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
      </nav>


      <div class="section no-pad-bot" id="index-banner">
        <div class="container">
          <h1 class="header center dark-text">All Records</h1>
          <div class="row center"> 
            <a href="/posts/new" class="center"><button type="button" class="btn waves-effect waves-light  light-blue darken-3">Add New Item</button></a>
            </div>
         
      <div class="row center">    
      <table class="centered" >
        <thead class="responsive-table">
          <tr>
              <th>Item</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Location</th>
              <th>Actions</th>
          </tr>
        </thead>
        <tbody class="responsive-table" >
          <%posts.forEach(function(post){%>
          <tr>
            <td><%=post.title%></td>
            <td><%=post.price%></td>
            <td><%=post.qty%></td>
            <td><%=post.location%></td>
          
            <td>  
              <form action="/posts/<%=post.id%>?_method=DELETE " method="POST"> 
              <a href="/posts/<%=post.id%>/edit">
                <button type="button" class="waves-effect waves-light green darken-2 btn">Edit</button>
              </a>
              <input class="waves-effect waves-light red darken-4 btn" type="submit" value="Delete"> 
              
              <a href="/posts/<%=post.id%>" class="waves-effect waves-light light-blue darken-4 btn">View More</a>
            </td>
          </form>
          </tr>
          <% });%>
        </tbody>
      </table>
          </div>
          <br><br>
    
        </div>
      </div>
    
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="javascripts/materialize.js"></script>
  <script src="javascripts/init.js"></script>
  </body>
</html>
      