      <div class="section no-pad-bot" id="index-banner">
        <div class="container">
          <h1 class="header center dark-text">Create New Item</h1>
                <div class="container">
                    <div class="row ">
                        <form class="col s12 " action="/posts" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="input-field col s12 ">
                            <b>Product Name</b>
                            <input placeholder="Enter Product Name" id="title" name="post[title]"  type="text" class="validate">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                            <b>Price</b>
                            <input placeholder="Enter Price" id="price" name="post[price]"  type="text" class="validate">
                            </div>
                           
                        <div class="row">
                            <div class="input-field col s6">
                            <b>Quantity</b>
                            <input placeholder="Enter Quantity" id="qty" name="post[qty]" p type="text" class="validate">
                           
                            </div>
                        </div>
                        <div class="row">
                            <div class="file-field input-field">
                                <div class="blue-grey   darken-2 btn">
                                  <span>Upload Photos</span>
                                  <input type="file" accept="images/*" name="images" id="images"  multiple>
                                </div>
                                <div class="file-path-wrapper">
                                  <input class="file-path validate" type="text" placeholder="Upload one or more files">
                                </div>
                              </div>
                          </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <b>Description</b>
                              <textarea id="description" class="materialize-textarea" name="post[description]"></textarea>
                            </div>
                          </div>
                          <div class="row">
                            <div class="input-field col s12">
                            <b>Location</b>
                            <input placeholder="Enter Location" type="text" id="location" name="post[location]" class="validate">
                            </div>
                           
                        </div>
                        <button class="btn waves-effect waves-light green darken-1" type="submit" name="action">Submit</button>
                        <a href="/posts/"><button type="button" class="btn waves-effect waves-light red darken-3">Cancel</button></a>
                        </form>
                    </div>  
                </div>
          </div>
        </div>
      </div>
    
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="javascripts/materialize.js"></script>
